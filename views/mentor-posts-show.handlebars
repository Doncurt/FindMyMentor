  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1 class="lead">{{mentorPosts.name}}</h1>
      <p>{{mentorPosts.summary}}</p>
      <p>{{mentorPosts.interest1}}</p>
      <p>{{mentorPosts.socialLink1 }}</p>
    </div>
    <div class="col-sm-6 col-sm-offset-3">
    <form method="POST" action="/mentor-posts/{{mentorPosts._id}}/comments">
      <label for="comment-content"> Request a Mentor! </label>
      <textarea name="content" id="comment-content" class='form-control' placeholder="Comment"></textarea>
      <div class="text-right">
        <button type="submit">Post</button>
      </div>
    </form>
    <div>
      <p>Comments:</p>
      {{#each mentorPost.comments}}
  <li class="list-group-item">
      <a href="/comments/{{this._id}}/new">Reply</a>
      <p>{{this.content}}</p>
      {{#if this.comments}}
          {{> comments}}
      {{/if}}
  </li>
  {{/each}}
    </div>

  </div>
</div>
